<%= form_with(model: resultat) do |f| %>
  
<!-- component -->
<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 w-11/12 max-w-xl sm:mx-auto">
    <div class="relative p-8 bg-white shadow-sm sm:rounded-xl">
    <% if resultat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resultat.errors.count, "error") %> prohibited this resultat from being saved:</h2>

      <ul>
        <% resultat.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
      <div class="w-full">
      <h2>Informe Mr Tiémé de ton resultat :</h2>
        <div class="mb-5 relative">
          <%= f.text_field :username, id:"username", class:"peer pt-8 border border-gray-200 focus:outline-none rounded-md focus:border-gray-500 focus:shadow-sm w-full p-3 h-16 placeholder-transparent", placeholder:"Ton nom complet", autocomplete:"off"  %>
          <label for="username" class="peer-placeholder-shown:opacity-100   opacity-75 peer-focus:opacity-75 peer-placeholder-shown:scale-100 scale-75 peer-focus:scale-75 peer-placeholder-shown:translate-y-0 -translate-y-3 peer-focus:-translate-y-3 peer-placeholder-shown:translate-x-0 translate-x-1 peer-focus:translate-x-1 absolute top-0 left-0 px-3 py-5 h-full pointer-events-none transform origin-left transition-all duration-100 ease-in-out">Mon nom est:</label>
        </div>
        <div class="mb-5 relative">
          <%= f.text_field :contact, id:"contact", class:"peer pt-8 border border-gray-200 focus:outline-none rounded-md focus:border-gray-500 focus:shadow-sm w-full p-3 h-16 placeholder-transparent", placeholder:"contact", autocomplete:"off"  %>
          <label for="contact" class="peer-placeholder-shown:opacity-100   opacity-75 peer-focus:opacity-75 peer-placeholder-shown:scale-100 scale-75 peer-focus:scale-75 peer-placeholder-shown:translate-y-0 -translate-y-3 peer-focus:-translate-y-3 peer-placeholder-shown:translate-x-0 translate-x-1 peer-focus:translate-x-1 absolute top-0 left-0 px-3 py-5 h-full pointer-events-none transform origin-left transition-all duration-100 ease-in-out">Mon contact est:</label>
        </div>
        <div class="mb-5 relative">
          <%= f.text_field :contact_parent, id:"contact", class:"peer pt-8 border border-gray-200 focus:outline-none rounded-md focus:border-gray-500 focus:shadow-sm w-full p-3 h-16 placeholder-transparent", placeholder:"Contact du parent", autocomplete:"off"  %>
          <label for="contact" class="peer-placeholder-shown:opacity-100   opacity-75 peer-focus:opacity-75 peer-placeholder-shown:scale-100 scale-75 peer-focus:scale-75 peer-placeholder-shown:translate-y-0 -translate-y-3 peer-focus:-translate-y-3 peer-placeholder-shown:translate-x-0 translate-x-1 peer-focus:translate-x-1 absolute top-0 left-0 px-3 py-5 h-full pointer-events-none transform origin-left transition-all duration-100 ease-in-out">contact de mon parent est:</label>
        </div>
        <div class="mb-5 relative">
          <div class="title py-3 my-auto px-5 bg-blue-500 text-white text-sm font-semibold mr-3">je suis dans la ville de: </div>
          <label class="flex radio p-2 cursor-pointer">
            <%= f.radio_button :ville, :Tiassale,  class:"my-auto transform scale-125" %>
            
            <div class="title px-2">Tiassalé</div>
          </label>

          <label class="flex radio p-2 cursor-pointer">
            <%= f.radio_button :ville, :"N'Douci",  class:"my-auto transform scale-125" %>
            
            <div class="title px-2">N'Douci</div>
          </label>

        </div>
        <div class="mb-5 relative">
          <%= f.text_field :ecole, id:"school", class:"peer pt-8 border border-gray-200 focus:outline-none rounded-md focus:border-gray-500 focus:shadow-sm w-full p-3 h-16 placeholder-transparent", placeholder:"Ecole", autocomplete:"off"  %>
          <label for="school" class="peer-placeholder-shown:opacity-100   opacity-75 peer-focus:opacity-75 peer-placeholder-shown:scale-100 scale-75 peer-focus:scale-75 peer-placeholder-shown:translate-y-0 -translate-y-3 peer-focus:-translate-y-3 peer-placeholder-shown:translate-x-0 translate-x-1 peer-focus:translate-x-1 absolute top-0 left-0 px-3 py-5 h-full pointer-events-none transform origin-left transition-all duration-100 ease-in-out">je fréquente a </label>
        </div>

        <!-- component -->
        <div class="mb-5 relative">
          <div class="title py-3 my-auto px-5 bg-blue-500 text-white text-sm font-semibold mr-3">je suis en série</div>
          <label class="flex radio p-2 cursor-pointer">
            <%= f.radio_button :serie, :A1, class:"my-auto transform scale-125"%>
            <div class="title px-2">en A1</div>
          </label>

          <label class="flex radio p-2 cursor-pointer">
            <%= f.radio_button :serie, :A2, class:"my-auto transform scale-125"%>
            <div class="title px-2"> en A2</div>
          </label>

          <label class="flex radio p-2 cursor-pointer">
            <%= f.radio_button :serie, :D, class:"my-auto transform scale-125"%>
            <div class="title px-2">en D</div>
          </label>

          <label class="flex radio p-2 cursor-pointer">
            <%= f.radio_button :serie, :C, class:"my-auto transform scale-125"%>
            <div class="title px-2">en C</div>
          </label>

        </div>

        <div class="mb-5 relative">
          <div class="title py-3 my-auto px-5 bg-blue-500 text-white text-sm font-semibold mr-3">je suis </div>
          <label class="flex radio p-2 cursor-pointer">
            <%= f.radio_button :genre, :Femme, class:"my-auto transform scale-125"%>
            <div class="title px-2">Une Femme</div>
          </label>

          <label class="flex radio p-2 cursor-pointer">
            <%= f.radio_button :genre, :Homme, class:"my-auto transform scale-125"%>
            <div class="title px-2">Un Homme</div>
          </label>

        </div>
        <div class="mb-5 relative">
          <%= f.text_field :age, id:"age", class:"peer pt-8 border border-gray-200 focus:outline-none rounded-md focus:border-gray-500 focus:shadow-sm w-full p-3 h-16 placeholder-transparent", placeholder:"Ton age", autocomplete:"off"  %>
          <label for="age" class="peer-placeholder-shown:opacity-100   opacity-75 peer-focus:opacity-75 peer-placeholder-shown:scale-100 scale-75 peer-focus:scale-75 peer-placeholder-shown:translate-y-0 -translate-y-3 peer-focus:-translate-y-3 peer-placeholder-shown:translate-x-0 translate-x-1 peer-focus:translate-x-1 absolute top-0 left-0 px-3 py-5 h-full pointer-events-none transform origin-left transition-all duration-100 ease-in-out">Je suis âgé de</label>
        </div>
        
        
        <div class="my-5 relative">
          <div class="title py-3 my-auto px-5 bg-blue-500 text-white text-sm font-semibold mr-3">j'ai validé le bac</div>
          <label class="flex radio p-2 cursor-pointer">
            <%= f.radio_button :status, :Success, class:"my-auto transform scale-125"%>
            <div class="title px-2">oui, avec succes</div>
          </label>

          <label class="flex radio p-2 cursor-pointer">
            <%= f.radio_button :status, :Non, class:"my-auto transform scale-125"%>
            <div class="title px-2"> Non!</div>
          </label>
        </div>

        <div class="mb-5 relative">
          <%= f.text_area :feedback, id:"status", class:"peer pt-8 border border-gray-200 focus:outline-none rounded-md focus:border-gray-500 focus:shadow-sm w-full p-3 h-16 placeholder-transparent", placeholder:"status", autocomplete:"off"  %>
          <label for="status" class="peer-placeholder-shown:opacity-100   opacity-75 peer-focus:opacity-75 peer-placeholder-shown:scale-100 scale-75 peer-focus:scale-75 peer-placeholder-shown:translate-y-0 -translate-y-3 peer-focus:-translate-y-3 peer-placeholder-shown:translate-x-0 translate-x-1 peer-focus:translate-x-1 absolute top-0 left-0 px-3 py-5 h-full pointer-events-none transform origin-left transition-all duration-100 ease-in-out">Votre message pour Mr Tiémé.</label>
        </div>
        </div>
        <%= f.submit "Envoyez", class:"w-full bg-indigo-600 text-white p-3 rounded-md"%>
      </div>
    </div>
  </div>
</div>


<% end %>


